{% extends 'base.html.twig' %}

{% block body %}
    <h2>Mes réservations</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date de réservation</th>
                <th>Type de salle</th>
                <th>Nombre de Personnes</th>
                {# Ajoutez des entêtes de table pour d'autres colonnes ici #}
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.bookingDate|date('Y-m-d') }}</td>
                <td>{{ reservation.typeSalle }}</td>
                <td>{{ reservation.NombreSalle }}</td>
                
                {# Ajoutez des cellules de table pour d'autres colonnes ici #}
            </tr>
        {% else %}
            <tr>
                 <td colspan="4">Vous n'avez aucune réservation pour le moment.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
